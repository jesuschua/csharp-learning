<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MyFirstAvaloniaApp.MainWindow"
        Title="MyFirstAvaloniaApp"
        Width="600" Height="400">

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Hello, World!" FontSize="24" />
        <TextBlock Text="Welcome to Avalonia!" FontSize="18" />
        
        <TextBox x:Name="NameEntry" 
                 Watermark="Enter your name" 
                 Margin="0,10,0,0" />
        
        <Button Content="Greet Me" 
                Click="OnGreetClicked" 
                HorizontalAlignment="Stretch" />
        
        <TextBlock x:Name="ResultLabel" 
                   FontSize="16" 
                   Margin="0,10,0,0" />
    </StackPanel>
</Window>

